# Configuración de la aplicación
APP_ENV=development
APP_DEBUG=true
APP_NAME="Virtual Balance API"

# Base de datos - DESARROLLO LOCAL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=virtual_balance
DB_USER=root
DB_PASS=

# Base de datos - PRODUCCIÓN (Clever Cloud)
# Obtén estas credenciales desde: https://console.clever-cloud.com
# Dashboard → Tu addon MySQL → Connection URI
# DB_HOST=xxxxxxxx-mysql.services.clever-cloud.com
# DB_PORT=3306
# DB_NAME=xxxxxxxx
# DB_USER=xxxxxxxx
# DB_PASS=xxxxxxxx

# API Security
# Para producción, genera una clave segura con: openssl rand -hex 32
API_KEY=your_secret_api_key_here_change_in_production

# Logging
LOG_LEVEL=debug
LOG_PATH=logs/app.log

# Pasarela de pagos simulada
PAYMENT_GATEWAY_URL=http://localhost:3000
PAYMENT_SUCCESS_RATE=0.8
